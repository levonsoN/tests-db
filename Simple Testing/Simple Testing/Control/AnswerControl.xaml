<UserControl x:Class="SimpleTesting.Control.AnswerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleTesting.Control"
             mc:Ignorable="d" x:Name="control"  Height="80" Width="340">
    <Grid Width="{Binding ElementName=control, Path=ActualWidth}" Height="{Binding ElementName=control,Path=ActualHeight}" Background="White">
        <Border BorderBrush="#FF707070" BorderThickness="1"/>
        <CheckBox x:Name="isValidCheckBox" HorizontalAlignment="Left" Width="15" Margin="10,10,0,10"/>
        <TextBox x:Name="answerTextBox" Margin="30,10,10,10" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Text="" BorderBrush="#FF707070"/>
    </Grid>
</UserControl>
